{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "@@/*": ["*"],
      "~~/*": ["*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2018"
  }
}
